@model InsuranceCompany.WebApp.Models.PolicyType.PolicyTypeVM

@{
    ViewData["Title"] = "Edit Policy Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<h3>Edit Policy Type</h3>

<div class="container">
    <div class="row">
        <div class="col-7">
            <form method="post" asp-controller="PolicyTypes" asp-action="Edit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group row">
                    <label asp-for="Name" class="col-lg-3 col-form-label form-control-label">Name</label>
                    <div class="col-lg-9">
                         <input 
                            class="form-control" 
                            asp-for="Name" 
                            type="text"
                            required  
                            oninvalid="setCustomValidity('!!!!')"  
                            oninput="setCustomValidity('')">             
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-lg-3 col-form-label form-control-label">Description</label>
                    <div class="col-lg-9">
                        <textarea 
                            class="form-control" 
                            asp-for="Description" 
                            type="text"
                            required  
                            oninvalid="setCustomValidity('!!!!')"  
                            oninput="setCustomValidity('')">
                        </textarea>            
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Condition" class="col-lg-3 col-form-label form-control-label">Conditions</label>
                    <div class="col-lg-9">
                        <textarea class="form-control" 
                            asp-for="Condition"
                            type="text"
                            required
                            oninvalid="setCustomValidity('!!!!')"  
                            oninput="setCustomValidity('')">
                        </textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label"></label>
                    <div class="col-lg-9">
                        <input type="submit" class="btn btn-primary" value="Save" />
                        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "PolicyTypes")'">
                            Cancel
                        </button>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-header">
                        <h3>Policy Type Risks:</h3>
                    </div>
                    <div class="card-body">
                        @if(Model.Risks.Any())
                        {
                            @foreach(var risk in Model.Risks)
                            {
                                <h6 class="card-title">@risk.Name</h6>
                            }
                        }
                        else
                        {
                            <h6 class="card-title">No data</h6>
                        }
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" href="@Url.Action("EditPolicyTypeRisks", "PolicyTypes", new { id = Model.Id })">Edit</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>