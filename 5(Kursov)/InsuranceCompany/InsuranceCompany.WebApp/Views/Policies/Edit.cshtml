@model InsuranceCompany.WebApp.Models.Policy.PolicyVM

@{
    ViewData["Title"] = "Create Policy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/bootstrap-datepicker/css/bootstrap-datepicker.min.css">


<h3>Edit Policy</h3>

<div class="container">
    <div class="row">
        <div class="col-7">
            <form method="post" asp-controller="Policies" asp-action="Edit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Payment" class="col-lg-3 col-form-label form-control-label">Payment</label>
                    <div class="col-lg-9">
                        <input class="form-control"
                               asp-for="Payment"
                               type="number"
                               required
                               oninvalid="setCustomValidity('!!!!')"
                               oninput="setCustomValidity('')">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PolicyTypeId" class="col-lg-3 col-form-label form-control-label">Policy Type</label>
                    <div class="col-lg-9">
                        <select class="form-control"
                               asp-for="PolicyTypeId"
                               required
                               asp-items="ViewBag.PolicyTypes">
                         </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="EmployeeId" class="col-lg-3 col-form-label form-control-label">Employee</label>
                    <div class="col-lg-9">
                        <select class="form-control"
                               asp-for="EmployeeId"
                               required
                               asp-items="ViewBag.Employees">
                         </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label"></label>
                    <div class="col-lg-9">
                        <input type="submit" class="btn btn-primary" value="Update" />
                        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Policies")'">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://kendo.cdn.telerik.com/2022.3.1109/js/jquery.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2022.3.1109/js/kendo.all.min.js"></script>
<script src="~/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script src="~/bootstrap-datepicker/locales/bootstrap-datepicker.en-GB.min.js"></script>
<script>
    $(document).ready(function () {
        $("#startDate").datepicker({
            format: "dd/mm/yyyy"
        });
       $("#finishDate").datepicker({
            format: "dd/mm/yyyy"
        });

    });
</script>